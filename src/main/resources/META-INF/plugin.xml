<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>SleecLanguageExtension</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Sleec</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="kevinkolyakov@gmail.com" url="https://github.com/Kevin-Kolyakov/sleec-intellij-plugin">Kevin K.</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    SLEEC language support for IntelliJ IDEA with a default project as well as multiple language editing features.
  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Sleec File"
                implementationClass="com.example.sleeclanguageextension.SleecFileType"
                fieldName="INSTANCE"
                language="sleec"
                extensions="sleec"/>
        <lang.parserDefinition
                language="sleec"
                implementationClass="com.example.sleeclanguageextension.SleecParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="sleec"
                implementationClass="com.example.sleeclanguageextension.SleecSyntaxHighlighterFactory"/>
        <configurationType
                implementation="com.example.sleeclanguageextension.SleecRunConfigurationType"/>
        <projectTemplatesFactory implementation="com.example.sleeclanguageextension.SleecTemplatesFactory"/>
        <applicationConfigurable instance="com.example.sleeclanguageextension.SleecSettingsConfigurable" displayName="Sleec Settings"/>
        <toolWindow id="SleecToolWindow" anchor="bottom" factoryClass="com.example.sleeclanguageextension.SleecToolWindowFactory"/>
        <lang.foldingBuilder language="sleec" implementationClass="com.example.sleeclanguageextension.SleecFoldingBuilder"/>
        <completion.contributor language="sleec" implementationClass="com.example.sleeclanguageextension.SleecCompletionContributor"/>
        <annotator language="sleec" implementationClass="com.example.sleeclanguageextension.reference.SleecAnnotator"/>
        <gotoDeclarationHandler implementation="com.example.sleeclanguageextension.finder.SleecGotoDeclarationHandler"/>
        <typedHandler implementation="com.example.sleeclanguageextension.SleecTypedHandler"/>
    </extensions>
    <actions>
        <action id="concern" class="com.example.sleeclanguageextension.PythonRun"
                text="Checks for Concerns in Sleec Files" description="Checks for concerns in sleec files" icon="AllIcons.General.BalloonWarning">
            <add-to-group group-id="ToolbarRunGroup" anchor="first" />
        </action>
        <action id="redundancy" class="com.example.sleeclanguageextension.PythonRun2"
                text="Checks for Redundancies in Sleec Files" description="Checks for redundancies in sleec files" icon="AllIcons.General.LayoutEditorOnly">
            <add-to-group group-id="ToolbarRunGroup" anchor="first" />
        </action>
        <action id="conflicts" class="com.example.sleeclanguageextension.PythonRun3"
                text="Checks for Conflicts in Sleec Files" description="Checks for conflicts in sleec files" icon="AllIcons.General.ExclMark">
            <add-to-group group-id="ToolbarRunGroup" anchor="first" />
        </action>
        <action id="purpose" class="com.example.sleeclanguageextension.PythonRun4"
                text="Checks for Purpose in Sleec Files" description="Checks for purpose in sleec files" icon="AllIcons.General.TodoQuestion">
            <add-to-group group-id="ToolbarRunGroup" anchor="first" />
        </action>
        <action id="situational.conflicts" class="com.example.sleeclanguageextension.PythonRun5"
                text="Checks for Situational Conflicts in Sleec Files" description="Checks for situational conflicts in sleec files" icon="AllIcons.General.InspectionsMixed">
            <add-to-group group-id="ToolbarRunGroup" anchor="first" />
        </action>
    </actions>

</idea-plugin>